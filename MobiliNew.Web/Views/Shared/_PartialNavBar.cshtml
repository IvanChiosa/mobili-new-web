                @using (Html.BeginForm("SearchProduct", "Product", FormMethod.Get, new { @class = "search-box" }))
                {
                    <input class="search-box-write" type="search" placeholder="Cerca Prodotti" aria-label="Search" id="searchKey" name="searchKey" />
                    <div class="container-search-btn">
                        <button type="submit" class="btn-search btn"></button>
                    </div>
                }
            </div>
        </div>
    </nav>
</header>