@using Microsoft.AspNetCore.Mvc.Localization 
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Home Page";
}
<h3>@Localizer[""]</h3>
<header>
    <nav class="navbar navbar-light" style="background-color: #007bff;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#007bff">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Furniture"]</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-controller="Categories" asp-action="Index">@Localizer["Category"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">@Localizer["Product"]</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="search-button">
            @*<form class="form-inline my-2 my-lg-0">
