@model IEnumerable<MobiliNew.Web.Models.ReturnModels.ProductReturnModels>

@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "ProductsByCategory";
}

@*<h3>@Localizer["Type_of_furniture"]</h3>*@


<div class="product-compact_spacer">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-3 col-6">
                <div class="product-compact__spacer">
                    @*<a href="/Product/ProductsByCategory/@item.Id">*@
                        <div class="product-compact__image-container"></div>

                        <span class="product-compact__name"><b><h3>@item.Name</h3></b></span>
                        <br />
                        <span class="product-compact__image">
                            <img class="single-retailer-img" src="@Url.Content(item.ImageUrl)">
                        </span>
                    @*</a>*@
                    <br />
                    <span class="product-compact__type">
                        <span class="product-compact__decription">@item.Description</span>
                    </span>
                    <br />
                    <span class="product-compact__price">
                        <span class="product-compact__price__value">@item.Price</span>
                    </span>
                </div>
            </div>
            <br />
        }
    </div>
</div>

